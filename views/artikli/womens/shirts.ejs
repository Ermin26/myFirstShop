<% layout('layouts/boilerplate') %>
    <title> Salester-Shop</title>
    <link rel="stylesheet" href="/css/allPages.css">
    <link rel="stylesheet" href="/css/cardHeight.css">
    <div id="container" class="d-flex flex-row">
        <h1 class="bg-danger ms-auto me-auto">Slide show</h1>
    </div>
        <div id="rowColumn" class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 d-flex flex-row flex-wrap justify-content-center">
            <% for(let product of products) {%>
            <div id="colRow" class="col mt-3 p-1 justify-content-center">
                <a href="/product/<%= product.id %> " class="justify-content-center">
                        <div class="card shadow m-0">
                            <div id="cardHeaderHome" class="card-header text-center" style="background-image: url(<%= product.links[0] %>);">

                            </div>
                            <div id="cardBodyHome" class="card-body">
                                <h3 class="d-inline">
                                    <%= product.name %>
                                </h3>
                                <br>
                                <h5 id="pDesc" class="d-inline-flex">
                                    - <%= product.info %>
                                </h5>
                            </div>
                            <div class="card-footer p-2">
                                <h2>
                                    <%= product.neto_price %> â‚¬
                                </h2>
                            </div>
                        </div>
                    </a>
                    </div>
                    <% } %>
                </div>