<% layout('layouts/boilerplate') %>


    <% if(items.length) {%>
        <div class="myCart mt-5 mb-5">
            <% for (products of items) { %>
                <% for (product of products) { %>
                    <div class="card col-8 col-md-11 shadow-lg mt-3 ms-auto me-auto">
                        <div class="row col">
                            <div class="col-8 col-md-5" id="img1">
                                <div id="carousel<%= product.id %>" class="carousel slide">
                                    <div class="carousel-inner">
                                        <% product.p_imgdestination.forEach((img, i)=>{%>
                                            <div class="carousel-item <%= i === 0 ? 'active' : '' %> ">
                                                <img class="img-fluid col" alt="" src="<%= img %>"
                                                    style="height: 400px; width: 300px;">
                                            </div>
                                            <% }) %>
                                    </div>

                                    <% if(product.p_imgdestination.length> 1) {%>
                                        <button class="carousel-control-prev" type="button"
                                            data-bs-target="#carousel<%= product.id %>" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                            data-bs-target="#carousel<%= product.id %>" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                        <% } %>
                                </div>
                                <div class="card-footer">
                                    <h1 class="card-title">
                                        <%= product.p_name%>
                                    </h1>
                                    <h3 class="card-text">
                                        <small class="text-muted">
                                            <%= product.p_price %> â‚¬
                                        </small>
                                    </h3>
                                </div>

                            </div>
                            <div class="col-4 col-md-6 ms-4">
                                <div class="card-body">
                                    <h1 class="card-title">
                                        <%= product.p_desc%>
                                    </h1>
                                    <h3 class="card-text">
                                        <small class="text-muted">
                                            <%= product.p_fulldesc %>
                                        </small>
                                    </h3>
                                    <a class="btn btn-primary mt-5" href="/remove/<%=product.id %> ">Remove</a>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% } %>
                        <% } %>
                            <%}else { %>
                                <h1>Your cart is empty.</h1>
                                <%} %>
        </div>