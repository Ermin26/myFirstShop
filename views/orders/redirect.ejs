<% layout('layouts/boilerplate') %>
    <% include('../../flash') %>
    <link rel="stylesheet" href="css/redirect.css">
    <div id="container" class="container mt-5 text-center justify-content-center">
        <h1>Podatki o naročilu</h1>

        <div class="row row-cols-1 row-cols-md-2 d-flex flex-column flex-md-row shadow">
            <div class="col">
                <% if(myOrder) {%> <br>
                <div id="orderInfo" class="card ms-auto me-auto border border-1">
                    <div class="card-header">
                        <div class="row p-1 border-bottom border-2 text-center"><strong>Številka naročila</strong></div>
                        <div class="col p-2 text-start"><%= myOrder.trackingnum %></div>
                    </div>
                    <div class="card-body p-0">
                        <div class="row p-1 border-bottom border-2 text-center"><strong>Podatki za dostavo</strong></div>
                        <div class="col p-2 text-start"><%= myOrder.country %></div>
                        <div class="col p-2 text-start"><%= myOrder.city %></div>
                        <div class="col p-2 text-start"><%= myOrder.street %></div>
                        <div class="col p-2 text-start"><%= myOrder.zip %></div>
                    </div>
                    <div class="card-footer p-0">
                        <div class="row p-1 border-bottom border-2 text-center"><strong>Kontakt</strong></div>
                        <div class="col p-2 text-start"><%= myOrder.name %></div>
                        <div class="col p-2 text-start"><%= myOrder.phone %></div>
                        <div class="col p-2 text-start"><%= myOrder.email %></div>
                    </div>
                </div>
            </div>
            <div class="col">
                <table class="table border mt-4">
                    <tr>
                        <th>Izdelek</th>
                        <th>Količina</th>
                        <th>Cena</th>
                    </tr>
                    <tbody>
                        <% for(product of items) {%>
                        <tr>
                            <td><div class="imgField"><img src="<%= product.img %>" alt=""></div> <%= product.name %> <%= product.size %></td>
                            <td class="align-middle"><%= product.qty %></td>
                            <td class="align-middle"><%= product.price  %></td>
                        </tr>
                        <% } %>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-start"><strong>Skupaj</strong></td>
                            <td><strong><%= myOrder.costs %></strong> €</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <% } %>
        </div>
    </div>



    <script src="https://js.stripe.com/v3/"></script>