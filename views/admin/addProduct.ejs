    <link rel="stylesheet" href="/css/productAdd.css">
    <title>Dashboard</title>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/admin">Home</a></li>
                <li>
                    <a href="/admin/products">Products</a>
                   <ul>
                       <li><a href="/admin/products/add">Add product</a></li>
                       <li><a href="/admin/products/edit">Edit product</a></li>
                   </ul>
               </li>
              <li>
                <a href="/admin/orders">Orders</a>
                <ul>
                       <li><a href="/admin/orders/sended">Sended</a></li>
                       <li><a href="/admin/orders/notsended">Not sended</a></li>
                   </ul>
            </li>
              <li>
                <a href="/admin/users">Users</a>
                <ul>
                       <li><a href="/admin/users/add">Add user</a></li>
