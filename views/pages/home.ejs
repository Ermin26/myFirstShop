<% layout('layouts/boilerplate') %>
    <title> Salester-Shop</title>


        <div id="rowColumn" class="row d-flex flex-row flex-wrap justify-content-center" style="margin-bottom: 20vh;">
            <% for(let product of products) {%>
                    <div id="colRow" class="col-6 col-lg-3 mt-5">
                        <div class="card shadow">
                            <div class="card-header text-center">
                                <a href="/product/<%= product.id %> "> <img id="imgSize" class="img-fluid" src="<%= product.links[0] %>"
                                        alt="Here goes product img"></a>
                            </div>
                            <div id="body" class="card-body p-3">
                                <h3 class="d-inline">
                                    <%= product.name %>
                                </h3>
                                <h5 id="pDesc" class="d-inline-flex">
                                    - <%= product.info %>
                                </h5>
                            </div>
                            <div class="card-footer p-3">
                                <h2>
                                    <%= product.neto_price %> â‚¬
                                </h2>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>