<% layout('layouts/boilerplate') %>

<div id="rowColumn" class="row d-flex flex-row flex-wrap justify-content-center" style="margin-bottom: 20vh;">
    <% for(let product of products) {%>
        <div id="colRow" class="col col-md-6 col-lg-3 mt-5">
            <a href="/product/<%= product.id %> ">
                <div class="card shadow" style="background-image: url(<%= product.links[0] %>);">
                    <div class="card-header text-center">

                    </div>
                    <div id="body" class="card-body p-3">
                        <h3 class="d-inline">
                            <%= product.name %>
                        </h3>
                        <h5 id="pDesc" class="d-inline-flex">
                            - <%= product.info %>
                        </h5>
                    </div>
                    <div class="card-footer p-3">
                        <h2>
                            <%= product.neto_price %> â‚¬
                        </h2>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>