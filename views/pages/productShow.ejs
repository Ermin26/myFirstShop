<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/show.css">

<div class="row row-cols-2 d-flex flex-column flex-md-row ms-auto me-auto">

    <% for(let info of shirts) {%>
    <div class="col-12 col-lg-5">
            <div id="carouselExampleControls" class="carousel slide">
                <div id="carousel" class="carousel-inner text-center">
                    <% info.links.forEach((img, i)=>{%>
                        <div class="carousel-item <%= i === 0 ? 'active' : '' %> ">
                            <img id="card-img" class="img-fluid" alt="" src="<%= img %>" style="height: 400px; width:400px; min-height: 400px; max-width:400px; object-fit:cover; object-position: center;">
                        </div>
                        <% }) %>
                </div>

                <% if(info.links.length> 1) {%>
                    <button class="carousel-control-prev" type="button"
                        data-bs-target="#carouselExampleControls" data-bs-slide="prev" data-bs-theme="dark">
                        <span id="prevBtn" class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button"
                        data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <% } %>
            </div>
    
            
   
        </div>

    <div class="col-12 col-lg-7 justify-content-center">
        <div class="infoData mt-5 text-center">
            
                
                <h1 id="p_name">
                    <%= info.name %>
                </h1>
                <h3>
                    <%= info.description %>
                </h3>
                <div class="priceBtn d-flex flex-row mt-5 justify-content-center align-items-center">
                    <h2 id="p_price" class="d-inline-flex">
                        <%= info.neto_price %> €
                    </h2> <p class="d-flex m-0">   + Brezplačna poštnina</p>
                </div>
                
                <div class="velikost mt-5">
                <p>Velikost na voljo</p>
                <form action="/add-to-cart" method="post" class="text-center ms-auto me-auto">
                            <div class="add-to-cart mt-5" style="margin-bottom: 10vh;">
                                <div class="row row-cols-2 mb-5 justify-content-center">
                                    <div class="col-4">
                                        <div class="input-group">
                                            <div class="form-floating">
                                                <select class="form-select-sm" name="sku_num" id="color" onchange="colorChoose()">
                                                    <option selected>Izberi Barvo</option>
                                                        <% for(let s = 0; s < colors.length; s++) {%>
                                                    <option value="<%= colors[s].color %>"><%= colors[s].color %></option>
                                                           
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="input-group">
                                            <div class="form-floating">
                                                <% for(let s = 0; s < colors.length; s++) {%>
                                                <select class="form-select-sm text-center" name="sku" id="<%= colors[s].color %>" onchange="sizeChoose()" style="display: none;">
                                                    <option selected>Izberi velikost</option>
                                                    <% for(product of products) {%>
                                                        <% if(product.color == colors[s].color && product.qty > 0) {%>
                                                        <option value="<%= product.sku %>"><%= product.size%></option>
                                                   
                                                        <% } %>
                                                        <% } %>      
                                                </select>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                    <input type="hidden" id="p_id" name="product_id" value="<%= info.id %>">
                                    <input type="hidden" id="p_name" name="product_name" value="<%= info.name %>">
                                    <input type="hidden" id="p_color" name="product_color" value="">
                                    <input type="hidden" id="p_size" name="product_size" value="">
                                    <input type="hidden" id="p_price" name="product_price" value="<%= info.neto_price %>">
                                    <button type="submit" id="btn" class="btn btn-primary ms-auto me-auto">Dodaj v Košarico</button>
                                </form>
                            </div>
                    
            </div>
    </div>
    <% } %>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script>
    
    userSelect = [];
    document.getElementById('btn').style.display = 'none';
    function colorChoose(){
        let selected = document.getElementById('color').value;
        userSelect.push(selected);
        let test = document.getElementsByName(`sku`);
        let inputs = document.getElementsByTagName('select');
        let sel = document.getElementById('color');
        let text = sel.options[sel.selectedIndex].text;
        document.getElementById('p_color').value = text;
        //console.log(test)
        for(let i = 0; i < test.length; i++){
            console.log(selected, test)
            if(test[i].id == selected){
                console.log(selected);
                document.getElementById(test[i].id).style.display = 'block';
                document.getElementById(test[i].id).removeAttribute('disabled', 'disabled');

            }else{
                document.getElementById(test[i].id).setAttribute('disabled', 'disabled');
                document.getElementById(test[i].id).style.display = 'none';
            }
        }
    }
    function sizeChoose(){
        let userSelected = document.getElementById(`${userSelect[0]}`).value;
        if(userSelected !== 'Izberi velikost') {
            let selSize = document.getElementById(`${userSelect[0]}`)
            let textSize = selSize.options[selSize.selectedIndex].text;
            document.getElementById('p_size').value = textSize;
            document.getElementById('btn').style.display = 'block';

        }else{
            document.getElementById('btn').style.display = 'none';
        }

        
    }   
</script>




   