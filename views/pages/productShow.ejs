<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/show.css">
   
    <div class="row row-cols-2 d-flex  flex-md-row ms-auto me-auto mt-5">

        <% for(let info of shirts) {%>
            <div class="col-12 col-lg-5 bg-info flex-row p-0 m-0">
                <div id="carouselExampleControls" class="carousel slide bg-warning m-0" style="height: 400px; width:400px; min-height: 400px; max-width:400px;">
                    <div id="carousel" class="carousel-inner text-center">
                        <% info.links.forEach((img, i)=>{%>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %> ">
                                <img id="card-img" class="img-fluid" alt="" src="<%= img %>"
                                    style="height: 400px; width:400px; min-height: 400px; max-width:400px; object-fit:cover; object-position: center;">
                            </div>
                            <% }) %>
                            
                    </div>
                    
                    <% if(info.links.length> 1) {%>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev" data-bs-theme="dark">
                            <span id="prevBtn" class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                        
                </div>

            </div>

            <div class="col-12 col-lg-7 justify-content-center">
                <div class="infoData mt-5 text-center">
                    <h1 id="p_name">
                        <%= info.name %>
                    </h1>
                    <h3>
                        <%= info.description %>
                    </h3>
                    <div class="priceBtn d-flex flex-row mt-5 justify-content-center align-items-center">
                        <h2 id="p_price" class="d-inline-flex">
                            <%= info.neto_price %> €
                        </h2>
                        <p class="d-flex m-0"> + Brezplačna poštnina</p>
                    </div>

                    <div class="velikost mt-5">

                        <form action="/add-to-cart" method="post" class="text-center ms-auto me-auto">
                            <div class="add-to-cart mt-5" style="margin-bottom: 10vh;">
                                
                                    <div class="row text-left mb-5">
                                        <div id="colorSection" class="ms-auto d-inline-flex">
           
                                        </div>
                                    </div>
                                    <!--///////////////////////////////////////-->

                                    <div class="row mt-5 mb-5">
                                        <div id="sizeSection">
                                            <!-- Sizes for the selected color will be dynamically added here -->
                                        </div>
                                    </div>


                                <input type="hidden" id="p_id" name="product_id" value="<%= info.id %>">
                                <input type="hidden" id="p_name" name="product_name" value="<%= info.name %>">
                                <input type="hidden" id="p_color" name="product_color" value="">
                                <input type="hidden" id="p_size" name="product_size" value="">
                                <input type="hidden" id="p_price" name="product_price" value="<%= info.neto_price %>">
                                <button type="submit" id="btn" class="btn btn-primary ms-auto me-auto">Dodaj v
                                    Košarico</button>
                        </form>
                        </div>
                    </div>

                </div>
            </div>
            <% } %>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <script>
      
        document.addEventListener('DOMContentLoaded', function () {
        const colorSection = document.getElementById('colorSection');
        const sizeSection = document.getElementById('sizeSection');
        const products = JSON.parse('<%- productsJSON %>');
        function handleColors(colors) {
          colors.forEach((color) => {
            const colorDiv = document.createElement('div');
            colorDiv.classList.add('color');
            colorDiv.setAttribute('data-color', color.color);
            colorDiv.textContent = color.color;

            colorDiv.addEventListener('click', function () {
            const selectedColor = this.getAttribute('data-color');
            handleColorSelection(selectedColor);
            });
            
            colorSection.appendChild(colorDiv);
          });
        }

        let selectedColorDiv = null; // Variable to keep track of the selected color div

function handleColorSelection(color) {
  if (selectedColorDiv) {
    // Remove the previous selected class
    selectedColorDiv.classList.remove('selected');
  }

  // Add selected class to the clicked color div
  const colorDiv = colorSection.querySelector(`[data-color="${color}"]`);
  colorDiv.classList.add('selected');
  selectedColorDiv = colorDiv;
  document.getElementById('p_color').value = selectedColorDiv.innerText;
  // Call the function to render sizes for the selected color
  renderSizes(color);
}
      
        function renderSizes(color) {
          const selectedProduct = products.find((product) => product.color === color);
      
          if (selectedProduct) {
            const event = new CustomEvent('sizesUpdated', { detail: selectedProduct.sizes });
            window.dispatchEvent(event);
          }
        }
        window.addEventListener('sizesUpdated', function (event) {
          const sizes = event.detail;
          const sizeDivs = [];
          sizeSection.innerHTML = ''; // Clear previous sizes
      
          sizes.forEach((size) => {
            const sizeDiv = document.createElement('div');
            sizeDiv.classList.add('size');
            sizeDiv.textContent = size;
      
            sizeDiv.addEventListener('click', function () {
              const selectedSize = this.textContent;
              sizeDivs.forEach((div) =>{
                if(div !== this){
                  div.classList.remove('selected');
                }
              })
              // Toggle the 'selected' class on the clicked size div
              this.classList.toggle('selected');
              
            document.getElementById('p_size').value = selectedSize;
              //addToCart(selectedColor, selectedSize);
            });
            sizeDivs.push(sizeDiv)
            sizeSection.appendChild(sizeDiv);
          });
        });
      
        handleColors(JSON.parse('<%- productsJSON %>'));
      
        const colorDivs = document.querySelectorAll('.color');
      
        colorDivs.forEach((colorDiv) => {
          colorDiv.addEventListener('click', function () {
            const selectedColor = this.getAttribute('data-color');
            renderSizes(selectedColor);
          });
        });
      });


    </script>