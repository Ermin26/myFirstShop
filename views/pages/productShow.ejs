<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/show.css">
    <link rel="stylesheet" href="/css/allPages.css">
    <title><%= shirts.name%> - <%= shirts.info %></title>
    <div id="top-row" class="row row-cols-2 d-flex flex-row ms-auto me-auto mt-5">
            <div id="col1" class="p-0 m-0">
                <div id="carouselExampleControls" class="carousel slide m-0">
                    <div id="carousel" class="carousel-inner text-center">
                        <%shirts.links.forEach((img, i)=>{%>
                            <div id="item" class="carousel-item <%= i === 0 ? 'active' : '' %> " data-num= '<%= i%>'>
                                <img class="img-fluid" id="topImg" alt="" src="<%= img %>">
                            </div>
                            <%}) %>
                    </div>
                    <% if(shirts.links.length> 1) {%>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev" data-bs-theme="dark">
                            <span id="prevBtn" class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                </div>

            </div>

            <div id="col2" class="justify-content-center">
                <div class="infoData mt-2 mb-5 ms-0 ms-md-5">
                    <h1 id="p_name" class="mb-5">
                        <%= shirts.name %>
                    </h1>
                    <h3 class="mt-5">
                        <%= shirts.description %>
                    </h3>

                    <div class="priceBtn d-flex flex-column mt-5 justify-content-center align-items-left">
                      <h1 id="p_price" class="col btn border border-2 border-dark mt-2">
                          <strong><%= shirts.neto_price %> €</strong>
                        </h1>
                    </div>


                    <div class="velikost mt-5">
                        <form action="/add-to-cart" method="post" class=" ms-auto me-auto">
                            <div class="add-to-cart mt-5" style="margin-bottom: 5vh;">
                                    <div id="colorRow" class="row text-left mb-5">
                                        <div id="colorSection">

                                        </div>
                                    </div>

                                    <div id="sizeRow" class="row mt-5 mb-5">
                                        <div id="sizeSection">
                                            <!-- Sizes for the selected color will be dynamically added here -->
                                        </div>
                                    </div>


                                <input type="hidden" id="p_id" name="product_id" value="<%= shirts.id %>">
                                <input type="hidden" id="p_invt_sku" name="invt_sku" value="<%= shirts.inventory_sku %>">
                                <input type="hidden" id="p_sku" name="product_sku" value="">
                                <input type="hidden" id="p_name" name="product_name" value="<%= shirts.name %>">
                                <input type="hidden" id="p_color" name="product_color" value="">
                                <input type="hidden" id="p_size" name="product_size" value="">
                                <input type="hidden" id="p_price" name="product_price" value="<%= shirts.neto_price %>">
                                <button type="submit" id="btn" class="btn btn-lg m-0">Dodaj v
                                    Košarico</button>
                            </div>
                        </form>
                </div>

            </div>
            <%# } %>
    </div>
    </div>

