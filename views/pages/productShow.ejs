                            data-bs-slide="prev" data-bs-theme="dark">
                            <span id="prevBtn" class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                        
                </div>

            </div>

            <div id="col2" class="justify-content-center">
                <div class="infoData mt-5 text-center">
                    <h1 id="p_name">
                        <%= info.name %>
                    </h1>
                    <h3>
                        <%= info.description %>
                    </h3>
                    
                    <div class="priceBtn d-inline-flex flex-row mt-5 justify-content-center align-items-center btn btn-outline-success">
                        <h1 id="p_price" class="d-inline-flex">
                            <%= info.neto_price %> €
                        </h1>
                        <p class="d-flex m-0"><strong> + Brezplačna poštnina</strong></p>
                    </div>

                    
                    <div class="velikost mt-5">

