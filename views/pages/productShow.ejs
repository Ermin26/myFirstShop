<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/show.css">
   
    <div id="main-row" class="row row-cols-2 d-flex flex-row ms-auto me-auto mt-5">

        <% for(let info of shirts) {%>
            <div id="col1" class="p-0 m-0">
                <div id="carouselExampleControls" class="carousel slide m-0">
                    <div id="carousel" class="carousel-inner text-center">
                        <%info.links.forEach((img, i)=>{%>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %> ">
                                <img id="card-img" class="img-fluid" id="topImg" alt="" src="<%= img %>">
                            </div>
                            <%}) %>
                            
                    </div>
                    
                    <% if(info.links.length> 1) {%>
